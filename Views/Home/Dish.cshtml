@{
    ViewData["Title"] = "Home Page";
}

@model Dish

<div class="d-flex justify-content-center align-items-center flex-column">
    <h1>Create a new dish!</h1>
    <form action="/create" method="post">
        <div class="form-group">
            <label asp-for="Chef">Chef's Name</label>
            <input asp-for="Chef" class="form-control">
            <span class="text-danger" asp-validation-for="Chef"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name">Name of Dish</label>
            <input asp-for="Name" class="form-control">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Calories"># of Calories</label>
            <input asp-for="Calories" class="form-control">
            <span class="text-danger" asp-validation-for="Calories"></span>
        </div>
        <div class="form-group">
            <label asp-for="Tastiness"></label>
            <span class="text-danger" asp-validation-for="Tastiness"></span>
            <select asp-for="Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label><br>
            <span class="text-danger" asp-validation-for="Description"></span>
            <textarea asp-for="Description" cols="155" rows="10"></textarea>
        </div>

        <input type="submit" value="Submit">
    </form>
</div>